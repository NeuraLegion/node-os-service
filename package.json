{
  "name": "@neuralegion/os-service",
  "version": "2.0.0",
  "description": "Run Node.JS programs as native Operating System Services.",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.mjs"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    }
  },
  "files": [
    "index.js",
    "index.mjs",
    "index.d.ts",
    "prebuilds",
    "scripts",
    "src",
    "binding.gyp"
  ],
  "directories": {
    "example": "example"
  },
  "gypfile": true,
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "nan": "^2.24.0",
    "node-gyp-build": "^4.8.4",
    "plist": "^3.1.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    {
      "name": "Stephen Vickers",
      "email": "stephen.vickers@nospaceships.com"
    },
    {
      "name": "NoSpaceships Ltd",
      "email": "hello@nospaceships.com"
    },
    {
      "name": "Artem Derevnjuk",
      "email": "artem.derevnjuk@neuralegion.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeuraLegion/node-os-service.git"
  },
  "bugs": {
    "url": "https://github.com/NeuraLegion/node-os-service/issues"
  },
  "keywords": [
    "background-process",
    "background-service",
    "daemon",
    "linux-daemon",
    "linux-service",
    "service",
    "windows",
    "windows-daemon",
    "windows-service"
  ],
  "author": "NoSpaceships Ltd <hello@nospaceships.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "prebuildify": "^6.0.1",
    "prebuildify-cross": "^5.1.1",
    "semantic-release": "^23.0.8",
    "tsup": "^8.5.1"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "node --test",
    "semantic-release": "semantic-release",
    "build:gyp": "prebuildify --napi false --strip --target 20.20.0 --target 21.7.3 --target 22.22.0 --target 23.11.1 --target 24.13.0 --target 25.3.0",
    "build:gyp-cross": "prebuildify-cross --napi false --strip --target 20.20.0 --target 21.7.3 --target 22.22.0 --target 23.11.1 --target 24.13.0 --target 25.3.0",
    "native_install": "node-gyp-build",
    "install": "node scripts/install.mjs",
    "prepare": "is-ci || husky install"
  },
  "overrides": {
    "prebuildify": {
      "node-abi": "^4.24.0"
    }
  }
}
